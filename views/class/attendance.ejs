<% include ../partials/header.ejs %>
<form action="/class/<%= foundClass.id %>/attendance" method="POST">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Class Attendance for
                    <%= foundClass.name %>
                </h2>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Day of Attendance
                    </label>
                    <div class="col-md-2 col-sm-2 col-xs-12">
                        <input id="birthday" name="day" class="date-picker form-control col-md-7 col-xs-12" required="required" type="date">
                    </div>
                </div>
            <div class="x_content">
                <div class="table-responsive">
                    <table class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th class="column-title"> Student Name </th>
                                <th class="column-title"> Student ID </th>
                                <th class="column-title no-link last">
                                    <span class="nobr">Is present</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                                <% students.forEach((student) => { %>
                                    <%= student.id %>
                                        <tr class="even pointer">
                                            <td class=" ">
                                                <%= student.name %>
                                            </td>
                                            <td class=" ">
                                                <%= student.sid %>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="students" value="<%= student.id %>">
                                                        <label class="form-check-label" for="inlineCheckbox1"> Present </label>
                                                    </div>

                                                </div>

                                            </td>
                                        </tr>
                                        <% }) %>
                                            <div class="form-group">
                                                <div class="">
                                                    <button type="submit" class="btn btn-success">Submit</button>
                                                </div>
                                            </div>
                            </form>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <% include ../partials/footer.ejs %>